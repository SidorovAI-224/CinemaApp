@model CinemaApp.BL.DTOs.MovieDTOs.Genre.GenreDTO

<h2 class="my-3">Delete Genre</h2>

<div class="alert alert-warning" role="alert">
    <h4 class="alert-heading">Are you sure you want to delete this genre?</h4>
    <p>This action cannot be undone. Please confirm your choice.</p>
</div>
<div class="mb-4">
    <h5>Genre: @Model.GenreName - ID: @Model.GenreID</h5>
</div>

<form asp-action="Delete" asp-route-id="@Model.GenreID" method="post" class="needs-validation" novalidate>
    <div class="d-flex justify-content-between">
        <button type="submit" class="btn btn-danger">Delete</button>
        <a asp-action="Index" class="btn btn-secondary">Cancel</a>
    </div>
</form>

<script>
    (function () {
        'use strict';
        const forms = document.querySelectorAll('.needs-validation');

        Array.prototype.slice.call(forms).forEach(function (form) {
            form.addEventListener('submit', function (event) {
                if (!form.checkValidity()) {
                    event.preventDefault();
                    event.stopPropagation();
                }

                form.classList.add('was-validated');
            }, false);
        });
    })();
</script>

@if (!ViewData.ModelState.IsValid)
{
    <div class="alert alert-danger mt-3">
        <ul>
            @foreach (var error in ViewData.ModelState.Values.SelectMany(v => v.Errors))
            {
                <li>@error.ErrorMessage</li>
            }
        </ul>
    </div>
}
