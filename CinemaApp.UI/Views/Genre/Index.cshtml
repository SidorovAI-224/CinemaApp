@model IEnumerable<CinemaApp.BL.DTOs.MovieDTOs.Genre.GenreDTO>

<h2 class="my-3">Genre List</h2>

<table class="table table-hover">
    <thead class="table-light">
        <tr>
            <th scope="col">ID</th>
            <th scope="col">Genre Name</th>
            <th scope="col">Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var genre in Model)
        {
            <tr>
                <td>@genre.GenreID</td>
                <td>@genre.GenreName</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@genre.GenreID" class="btn btn-warning btn-sm">Edit</a>
                    <a asp-action="Delete" asp-route-id="@genre.GenreID" class="btn btn-danger btn-sm">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>

<div class="mt-3">
    <a asp-action="Create" class="btn btn-primary">Add New Genre</a>
</div>
