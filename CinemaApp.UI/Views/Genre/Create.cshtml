@model CinemaApp.BL.DTOs.MovieDTOs.Genre.GenreCreateDTO

<h2>Додати новий жанр</h2>

<form asp-action="Create" method="post">
    <div class="form-group">
        <label asp-for="GenreName" class="control-label"></label>
        <input asp-for="GenreName" class="form-control" />
        <span asp-validation-for="GenreName" class="text-danger"></span>
    </div>
    <div class="form-group">
        <input type="submit" value="Додати" class="btn btn-primary" />
        <a asp-action="Index" class="btn btn-secondary">Назад до списку</a>
    </div>
</form>