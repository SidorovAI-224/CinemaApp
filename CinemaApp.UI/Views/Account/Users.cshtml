@model List<CinemaApp.UI.ViewModels.UserViewModel>
@{
    ViewData["Title"] = "List of all users";
}
<h2>List of all users</h2>
<table class="table table-bordered">
    <thead>
        <tr>
            <th>User ID</th>
            <th>Name</th>
            <th>Email</th>
            <th>Age</th>
            <th>Registration Date</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var user in Model)
        {
            <tr>
                <td>@user.UserId</td>
                <td>@user.Name</td>
                <td>@user.Email</td>
                <td>@user.Age</td>
                <td>@user.RegistrationDate.ToString("yyyy-MM-dd")</td>
                <td>
                    <a asp-action="EditUser" asp-route-id="@user.UserId" class="btn btn-primary">Edit</a>
                    <form asp-action="DeleteUser" method="post" style="display:inline;">
                        <input type="hidden" name="id" value="@user.UserId" />
                        <button type="submit" class="btn btn-danger" onclick="return confirm('Are you sure?')">Delete</button>
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>    