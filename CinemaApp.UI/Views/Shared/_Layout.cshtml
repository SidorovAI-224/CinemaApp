﻿<!DOCTYPE html>
<html lang="uk">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Absolute Cinema</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
</head>
<body class="@ViewData["BodyClass"]">
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container">
                <a class="navbar-brand fs-4" href="/">
                    <span class="text-primary fw-bold">Absolute</span> <span class="fw-bold text-dark">Cinema</span>
                </a>
                <button class="navbar-toggler" type="button" data-toggle="collapse" data-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item @(ViewData["ActivePage"] == "Home" ? "active" : "")">
                            <a class="nav-link text-dark" href="/">Головна</a>
                        </li>
                        <li class="nav-item @(ViewData["ActivePage"] == "Session" ? "active" : "")">
                            <a class="nav-link text-dark" href="/Session/SessionUserIndex">Сесії</a>
                        </li>
                        <li class="nav-item @(ViewData["ActivePage"] == "Profile" ? "active" : "")">
                            <a class="nav-link text-dark" href="/User/Profile">Особистий кабінет</a>
                        </li>
                        <li class="nav-item @(ViewData["ActivePage"] == "Admin" ? "active" : "")">
                            <a class="nav-link text-dark" href="/Home/Admin">Admin panel</a>
                        </li>
                    </ul>
                    <ul class="navbar-nav ml-auto">
                        <partial name="_LoginPartial" />
                        @if (User.Identity.IsAuthenticated)
                        {
                            <li class="nav-item dropdown">
                                <a class="nav-link dropdown-toggle" href="#" id="profileDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                    @User.Identity.Name
                                </a>
                                <ul class="dropdown-menu dropdown-menu-end" aria-labelledby="profileDropdown">
                                    <a class="nav-link text-dark" href="/User/Profile">Особистий кабінет</a>
                                </ul>
                            </li>
                        }
                        <partial name="_ProfileModal" />
                    </ul>
                </div>
            </div>
        </nav>
    </header>
<main>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>
</main>

    <footer class="bg-dark text-white py-4 w-100">
        <div class="container d-flex justify-content-between align-items-center flex-wrap">

            <div class="d-flex flex-column">
                <span class="fs-3 text-start">
                    <span class="text-primary fw-bold">Absolute</span> <span class="fw-bold text-white">Cinema</span>
                </span>

                <div class="mt-3 d-flex gap-3">
                    <a href="https://www.facebook.com" target="_blank" class="social-icon">
                        <i class="fab fa-facebook"></i>
                    </a>
                    <a href="https://www.instagram.com" target="_blank" class="social-icon">
                        <i class="fab fa-instagram"></i>
                    </a>
                    <a href="https://www.twitter.com" target="_blank" class="social-icon">
                        <i class="fab fa-twitter"></i>
                    </a>
                </div>
            </div>


            <span class="fs-5 text-center">
                Дніпровська набережна, 12, Київ, 1 Поверх
            </span>


            <div class="d-flex flex-column align-items-start fs-5 text-start text-white">
                <span>📞 +380 (80) 030-06-00</span>
                <span class="fs-6">
                    <strong>Графік роботи контакт-центру:</strong><br>
                    Понеділок-четвер – 9:00-21:00<br>
                    П'ятниця-неділя – 9:00-22:00
                </span>
            </div>
        </div>
    </footer>

    <script src="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.2/js/all.min.js"></script>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
