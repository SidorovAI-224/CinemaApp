@model CinemaApp.BL.DTOs.UserDTOs.Ticket.TicketDTO
@{
    ViewData["Title"] = "Видалити квиток";
}

<h2>Ви впевнені, що хочете видалити цей квиток?</h2>

<form asp-action="TicketDeleted" method="post">
    <input type="hidden" asp-for="TicketID" />
    <button type="submit" class="btn btn-danger">Видалити</button>
    <a asp-controller="Ticket" asp-action="TicketIndex" class="btn btn-secondary">Скасувати</a>
</form>