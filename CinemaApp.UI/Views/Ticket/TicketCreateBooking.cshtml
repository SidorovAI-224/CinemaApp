@using CinemaApp.BL.DTOs.MovieDTOs.Session
@model CinemaApp.BL.DTOs.UserDTOs.Ticket.TicketCreateDTO
@{
    ViewData["Title"] = "Book Tickets";
    var session = ViewBag.Session as SessionDTO;
    var takenSeats = ViewBag.TakenSeats as List<int> ?? new List<int>();
}

<div class="container">
    @if (session != null)
    {
        <h2 class="title">@session.MovieTitle</h2>
        <div class="info-container">
            <p>Date: @session.Date.ToString("dd.MM.yyyy")</p>
            <p>Time: @session.StartTime.ToString("T")</p>
            <p>Hall: @session.Hall</p>
            <div class="price-legend">
                <span class="price-item">
                    <span class="price-box available"></span>
                    140.00 UAH
                </span>
                <span class="price-item">
                    <span class="price-box reserved"></span>
                    Reserved
                </span>
                <span class="price-item">
                    <span class="price-box selected"></span>
                    Selected
                </span>
            </div>
        </div>

        <div class="screen-container">
            <div class="screen">SCREEN</div>
        </div>

        <form id="bookingForm">
            <input type="hidden" name="SessionID" value="@session.SessionID" />
            <div class="seating-layout">
                @for (int row = 1; row <= 10; row++)
                {
                    <div class="row">
                        <div class="row-number">@row</div>
                        @for (int seat = 1; seat <= 15; seat++)
                        {
                            var seatNumber = ((row - 1) * 15) + seat;
                            var isReserved = takenSeats.Contains(seatNumber);
                            <div class="seat @(isReserved ? "reserved" : "available")"
                                 data-seat-number="@seatNumber"
                                 data-row="@row"
                                 data-seat="@seat">
                                @seat
                            </div>
                        }
                    </div>
                }
            </div>

            <input type="hidden" name="selectedSeats" id="selectedSeatsInput" />
            <div class="total-amount">
                Total amount: <span id="totalPrice">0</span> UAH
            </div>

            <div class="booking-controls">
                <button type="button" class="buy-tickets-btn" disabled onclick="showConfirmation()">BUY TICKETS</button>
            </div>
        </form>
    }
    else
    {
        <div class="alert alert-danger">
            Session information is not available.
        </div>
    }
</div>

<div class="modal" id="confirmationModal" tabindex="-1" role="dialog">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Confirm Purchase</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <h4>Ticket Details:</h4>
                <div id="ticketDetails"></div>
                <p class="total-price"></p>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Cancel</button>
                <button type="button" class="btn btn-primary" onclick="confirmPurchase()">Confirm Purchase</button>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <style>
        body {
            background-color: white;
            color: #e0e0e0;
            font-family: 'Montserrat', sans-serif;
            margin: 0;
            padding: 0;
            line-height: 1.6;
        }

        .container {
            max-width: 1200px;
            margin: 0 auto;
            padding: 20px;
        }

        .title {
            text-align: center;
            margin-bottom: 20px;
            font-size: 2.5rem;
            font-weight: 700;
            color: #0c486c;
        }

        .info-container {
            text-align: center;
            margin-bottom: 30px;
            background-color: #1f1f1f;
            padding: 20px;
            border-radius: 10px;
            box-shadow: 0 4px 15px rgba(0, 0, 0, 0.3);
        }

        .price-legend {
            display: flex;
            justify-content: center;
            gap: 20px;
            margin-top: 10px;
        }

        .price-item {
            display: flex;
            align-items: center;
            gap: 5px;
            font-size: 1rem;
            color: #e0e0e0;
        }

        .price-box {
            width: 20px;
            height: 20px;
            border-radius: 4px;
        }

        .available {
            background-color: #28a745;
        }

        .reserved {
            background-color: #dc3545;
        }

        .selected {
            background-color: #007bff;
        }

        .screen-container {
            text-align: center;
            margin: 20px 0;
        }

        .screen {
            background-color: #2a2a40;
            padding: 15px;
            margin: 0 auto;
            width: 80%;
            text-align: center;
            font-weight: bold;
            color: #e0e0e0;
            border-radius: 10px;
            box-shadow: 0 4px 15px rgba(0, 0, 0, 0.3);
        }

        .seating-layout {
            margin: 20px auto;
            width: fit-content;
            background: #1f1f1f;
            padding: 20px;
            border-radius: 10px;
            box-shadow: 0 4px 15px rgba(0, 0, 0, 0.3);
        }

        .row {
            display: flex;
            align-items: center;
            gap: 8px;
            margin: 8px 0;
        }

        .row-number {
            width: 30px;
            text-align: center;
            font-weight: bold;
            color: #e0e0e0;
        }

        .seat {
            width: 35px;
            height: 35px;
            border-radius: 4px;
            cursor: pointer;
            transition: all 0.3s ease;
            display: flex;
            align-items: center;
            justify-content: center;
            font-size: 12px;
            color: #e0e0e0;
        }

        .available {
            background-color: #28a745;
        }

            .available:hover {
                background-color: #218838;
            }

        .reserved {
            background-color: #dc3545;
            cursor: not-allowed;
            color: #666;
        }

        .selected {
            background-color: #007bff;
            color: white;
        }

        .total-amount {
            text-align: center;
            margin: 20px 0;
            font-weight: bold;
            font-size: 1.2rem;
            color: black;
        }

        .booking-controls {
            text-align: center;
            margin: 20px 0;
        }

        .buy-tickets-btn {
            background-color: #007bff;
            border: none;
            padding: 15px 40px;
            border-radius: 30px;
            cursor: pointer;
            text-transform: uppercase;
            font-weight: bold;
            font-size: 1rem;
            color: #e0e0e0;
            transition: background-color 0.3s ease;
        }

            .buy-tickets-btn:hover:not(:disabled) {
                background-color: #0056b3;
            }

            .buy-tickets-btn:disabled {
                background-color: #6c757d;
                cursor: not-allowed;
            }

        .modal-content {
            background-color: #1f1f1f;
            color: #e0e0e0;
            border-radius: 10px;
        }

        .modal-header {
            border-bottom: 1px solid #333;
        }

        .modal-footer {
            border-top: 1px solid #333;
        }

        .modal-body ul {
            list-style-type: none;
            padding: 0;
        }

        .modal-body li {
            padding: 8px 0;
            border-bottom: 1px solid #333;
        }

        .modal-body .total-price {
            font-weight: bold;
            font-size: 1.2em;
            margin-top: 15px;
            color: #e0e0e0;
        }

        .modal {
            z-index: 1050 !important;
        }

        .modal-backdrop {
            z-index: 1040 !important;
        }
    </style>

    <script>
        document.addEventListener('DOMContentLoaded', function () {
            const seats = document.querySelectorAll('.seat.available');
            const totalAmount = document.getElementById('totalPrice');
            const selectedSeatsInput = document.getElementById('selectedSeatsInput');
            const submitButton = document.querySelector('.buy-tickets-btn');
            let selectedSeats = new Set();

            seats.forEach(seat => {
                seat.addEventListener('click', function () {
                    if (this.classList.contains('available')) {
                        const seatInfo = {
                            row: this.dataset.row,
                            seat: this.dataset.seat
                        };
                        const seatValue = `${seatInfo.row}-${seatInfo.seat}`;

                        if (this.classList.contains('selected')) {
                            this.classList.remove('selected');
                            selectedSeats.delete(seatValue);
                        } else {
                            this.classList.add('selected');
                            selectedSeats.add(seatValue);
                        }

                        const totalPrice = selectedSeats.size * 140;
                        totalAmount.textContent = totalPrice;
                        selectedSeatsInput.value = Array.from(selectedSeats).join(',');
                        submitButton.disabled = selectedSeats.size === 0;
                    }
                });
            });
        });

        function showConfirmation() {
            const selectedSeats = document.querySelectorAll('.seat.selected');
            let ticketDetailsHtml = '<ul>';

            selectedSeats.forEach(seat => {
                const row = seat.dataset.row;
                const seatNum = seat.dataset.seat;
                ticketDetailsHtml += `<li>Row ${row}, Seat ${seatNum} - 140.00 UAH</li>`;
            });

            ticketDetailsHtml += '</ul>';

            const totalPrice = selectedSeats.length * 140;
            document.getElementById('ticketDetails').innerHTML = ticketDetailsHtml;
            document.querySelector('.modal-body .total-price').textContent = `Total: ${totalPrice} UAH`;

            $('#confirmationModal').modal('show');
        }

        function confirmPurchase() {
            const form = document.getElementById('bookingForm');
            const formData = new FormData(form);

            fetch('@Url.Action("TicketCreateBooking", "Ticket")', {
                method: 'POST',
                body: formData
            })
                .then(response => response.json())
                .then(data => {
                    if (data.success) {
                        window.location.href = data.redirectUrl;
                    } else {
                        alert(data.message);
                    }
                })
                .catch(error => {
                    alert('An error occurred while processing your request.');
                });
        }
    </script>
}