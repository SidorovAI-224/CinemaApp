@model CinemaApp.BL.DTOs.UserDTOs.Ticket.TicketUpdateDTO

@{
    ViewData["Title"] = "Редагувати квиток";
}

<h2>Редагувати квиток</h2>

<form asp-action="Edit" method="post">
    <input type="hidden" asp-for="TicketID" />

    <div class="form-group">
        <label asp-for="SessionID">ID сеансу</label>
        <input asp-for="SessionID" class="form-control" required />
    </div>
    <div class="form-group">
        <label asp-for="Seat">Місце</label>
        <input asp-for="Seat" class="form-control" required />
    </div>
    <div class="form-group">
        <label asp-for="Price">Ціна</label>
        <input asp-for="Price" class="form-control" required />
    </div>
    <div class="form-group">
        <label asp-for="MovieTitle">Назва фільму</label>
        <input asp-for="MovieTitle" class="form-control" required />
    </div>
    <div class="form-group">
        <label asp-for="SessionStartTime">Час початку сеансу</label>
        <input asp-for="SessionStartTime" type="datetime-local" class="form-control" required />
    </div>

    <button type="submit" class="btn btn-primary">Зберегти зміни</button>
    <a asp-controller="Ticket" asp-action="Index" class="btn btn-secondary">Назад</a>
</form>

