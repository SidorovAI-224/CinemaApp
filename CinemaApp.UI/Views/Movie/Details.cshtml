@model CinemaApp.BL.DTOs.MovieDTOs.Movie.MovieDTO

<h2>Film details</h2>

<div>
    <h4>@Model.Title - @Model.MovieID ID</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">Description</dt>
        <dd class="col-sm-10">@Model.Description</dd>
        <dt class="col-sm-2">Duration</dt>
        <dd class="col-sm-10">@Model.Duration</dd>
        <dt class="col-sm-2">Release date</dt>
        <dd class="col-sm-10">@Model.ReleaseDate.ToShortDateString()</dd>
        <dt class="col-sm-2">Rating</dt>
        <dd class="col-sm-10">@Model.Rating</dd>
        <dt class="col-sm-2">Age limit</dt>
        <dd class="col-sm-10">@Model.AgeLimit</dd>
        <dt class="col-sm-2">Genre</dt>
        <dd class="col-sm-10">@Model.GenreID</dd>
        <dt class="col-sm-2">Poster</dt>
        <dd class="col-sm-10">
            @if (!string.IsNullOrEmpty(Model.PosterURL))
            {
                <img src="@Model.PosterURL" alt="Film poster" class="img-fluid" />
            }
            else
            {
                <span>Missing poster!</span>
            }
        </dd>
        <dt class="col-sm-2">Trailer</dt>
        <dd class="col-sm-10">
            @if (!string.IsNullOrEmpty(Model.TrailerURL))
            {
                <iframe width="560" height="315" src="@Model.TrailerURL.Replace("watch?v=", "embed/")" frameborder="0" allowfullscreen></iframe>
            }
            else
            {
                <span>Missing trailer!</span>
            }
        </dd>
        <dt class="col-sm-2">Crewmates and positions</dt>
        <dd class="col-sm-10">
            <ul>
                @foreach (var crewmate in Model.MovieCrewmates)
                {
                    <li>@crewmate.CrewmateName - @crewmate.PositionName</li>
                    Console.WriteLine($"Movie ID: {Model.MovieID}");
                    Console.WriteLine($"Crewmate ID: {crewmate.CrewmateID}");
                }
                @foreach(var position in Model.MovieCrewmates)
                {
                    Console.WriteLine($"Position ID: {position.PositionID}");
                }
            </ul>
        </dd>
    </dl>
</div>

<div>
    <a asp-action="Edit" asp-route-id="@Model.MovieID" class="btn btn-warning">Edit</a>
    <a asp-action="Index" class="btn btn-secondary">Back to list</a>
</div>
