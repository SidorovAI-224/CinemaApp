@model CinemaApp.BL.DTOs.MovieDTOs.Session.SessionDeleteDTO

<h2>Видалити сесію</h2>
<h3>Ви впевнені, що хочете видалити цю сесію?</h3>
<div>
    <h4>Session №@Model.SessionID - @Model.MovieTitle at @Model.Date.ToString("dd-MM-yyyy")</h4>
    <hr />
    <dl class="row">
        
        <dt class="col-sm-2">SessionID</dt>
        <dd class="col-sm-10">@Model.SessionID</dd>
        
        <dt class="col-sm-2">Date</dt>
        <dd class="col-sm-10">@Model.Date.ToString("dd-MM-yyyy")</dd>
        
        <dt class="col-sm-2">Time</dt>
        <dd class="col-sm-10">@Model.StartTime.ToString("HH:mm")</dd>

        <dt class="col-sm-2">Hall</dt>
        <dd class="col-sm-10">@Model.Hall</dd>
        
        <dt class="col-sm-2">MovieID</dt>
        <dd class="col-sm-10">@Model.MovieID</dd>

        <dt class="col-sm-2">MovieTitle</dt>
        <dd class="col-sm-10">@Model.MovieTitle</dd>
    </dl>

    <form asp-action="SessionDeleteConfirmed" method="post">
        <input type="hidden" name="id" value="@Model.SessionID" />
        <input type="submit" value="Видалити" class="btn btn-danger" />
        <a asp-action="SessionIndex" class="btn btn-secondary">Назад до списку</a>
    </form>
</div>