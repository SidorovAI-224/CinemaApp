@model IEnumerable<CinemaApp.BL.DTOs.MovieDTOs.Session.SessionDTO>

<h2>Доступні сеанси</h2>

<table class="table">
    <thead>
        <tr>
            <th>Session ID</th>
            <th>Фільм</th>
            <th>Час</th>
            <th>Зал</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var session in Model)
        {
            <tr>
                <td>@session.SessionID</td>
                <td>@session.MovieTitle</td>
                <td>@session.StartTime.ToString("g")</td>
                <td>@session.Hall</td>
                <td><a asp-controller="Ticket" asp-action="TicketCreate" class="btn btn-primary">Book a ticket</a></td>
            </tr>
        }
    </tbody>
</table>
