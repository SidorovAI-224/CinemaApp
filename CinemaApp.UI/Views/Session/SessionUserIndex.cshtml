@model IEnumerable<CinemaApp.BL.DTOs.MovieDTOs.Session.SessionDTO>
@{
    ViewData["Title"] = "Сторінка сеансів";
}

<body class="@ViewData["PageClass"]">
    <div class="container-fluid d-flex flex-column align-items-center justify-content-center vh-100">
        <div class="mb-3 text-center">
            <input type="date" id="dateInput" class="form-control d-inline-block w-auto">
            <button onclick="filterSessionsByDate(document.getElementById('dateInput').value)" class="btn btn-secondary">Фільтрувати за датою</button>
            <button onclick="filterSessionsByDate('all')" class="btn btn-info">Показати всі</button>
        </div>

        <table class="table custom-table">
            <thead class="table-dark">
                <tr>
                    <th>Назва фільму</th>
                    <th>Зал</th>
                    <th>Дата</th>
                    <th>Час початку</th>
                    <th>Білет</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var session in Model)
                {
                    <tr>
                        <td>@session.MovieTitle</td>
                        <td>@session.Hall</td>
                        <td>@session.Date.ToShortDateString()</td>
                        <td>@session.StartTime.ToShortTimeString()</td>
                        <td><a asp-controller="Ticket" asp-action="TicketCreate" class="btn btn-primary">Book a ticket</a></td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</body>
