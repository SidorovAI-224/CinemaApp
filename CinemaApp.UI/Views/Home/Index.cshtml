@model IEnumerable<CinemaApp.BL.DTOs.MovieDTOs.Movie.MovieDTO>

@{
    ViewData["Title"] = "Головна сторінка";
}

<h2>Усі фільми</h2>

@if (Model == null || !Model.Any())
{
    <p>Немає доступних фільмів.</p>
}
else
{
    <div class="row">
        @foreach (var movie in Model)
        {
            <div class="col-md-4 mb-4">
                <div class="card">
                    <img style="max-width: 400px; max-height: 300px" src="@movie.PosterURL" class="card-img-top" alt="Постер фільму">
                    <div class="card-body">
                        <h5 class="card-title">@movie.Title</h5>
                        <p class="card-text"><strong>Жанр:</strong> @movie.GenreName</p>
                        <p class="card-text"><strong>Рейтинг:</strong> @movie.Rating</p>
                        <a asp-controller="Movie" asp-action="Details" asp-route-id="@movie.MovieID" class="btn btn-primary">Деталі</a>
                    </div>
                </div>
            </div>
        }
    </div>
}