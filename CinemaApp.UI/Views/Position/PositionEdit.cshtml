@model CinemaApp.BL.DTOs.CrewDTOs.Position.PositionUpdateDto

<h2>Edit Position</h2>

<form asp-action="PositionEdit" method="post">
    <input type="hidden" asp-for="PositionId" />

    <div class="form-group">
        <label asp-for="PositionName">Title</label>
        <input asp-for="PositionName" class="form-control" />
        <span asp-validation-for="PositionName" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary">Save Changes</button>
    <a asp-action="PositionAdminIndex" class="btn btn-secondary">Cancel</a>
</form>
