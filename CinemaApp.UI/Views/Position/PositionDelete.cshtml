@model CinemaApp.BL.DTOs.CrewDTOs.Position.PositionDto

<h2>Delete Position</h2>
<h3>Are you sure you want to delete this position?</h3>

<div>
    <dl class="row">
        <dt class="col-sm-2">Title</dt>
        <dd class="col-sm-10">@Model.PositionName</dd>
    </dl>

    <form asp-action="DeleteConfirmed" asp-route-id="@Model.PositionId" method="post">
        <input type="hidden" asp-for="PositionId" />
        <button type="submit" class="btn btn-danger">Delete</button>
        <a asp-action="PositionAdminIndex" class="btn btn-secondary">Cancel</a>
    </form>

</div>